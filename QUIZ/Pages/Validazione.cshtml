@page
@model ValidazioneModel
@{
  ViewData["Title"] = "Validazione risposte";
  string classe =  "display: flex; margin-bottom: 5px; padding: 5px; border: 3px solid red; width: 300px";
}

<h1>@ViewData["Title"]</h1>
<h3>di @Model.Utente.Nome</h3>

@foreach (var Giusta in Model.Giuste)
{
  @if (Giusta.Uguali == true)
  {
    classe =  "display: flex; margin-bottom: 5px; padding: 5px; border: 3px solid green; width: 300px";
  }
  else
  {
    classe =  "display: flex; margin-bottom: 5px; padding: 5px; border: 3px solid red; width: 300px";
  }
    <div style = "@classe">
      <div style="padding: 10px; margin: 2px">
        @Giusta.Id
      </div>
      <div style="padding: 10px; margin: 2px; border: 2px solid blue">
        @Giusta.RispostaUtente
      </div>
      <div style="padding: 10px; margin: 2px; border: 2px solid rgb(26, 129, 22)">
        @Giusta.RispostaGiusta
      </div>
    </div>


}
