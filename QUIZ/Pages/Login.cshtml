@page
@model LoginModel
@{
  ViewData["Title"] = "Log In";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
  <div class="form-group">
    <label for="nome">Name</label>
    <input type="text" class='@ViewData["ClasseNome"]'  name="nome" required>   
    <small id="nameHelp" class="form-text text-muted">@ViewData["MessaggioNome"]</small>
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class='@ViewData["ClassePassword"]' name="password" required>
    <small id="passwordHelp" class="form-text text-muted">@ViewData["MessaggioPassword"]</small>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>


