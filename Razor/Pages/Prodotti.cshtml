@page
@model ProdottiModel
@{
  ViewData["Title"] = "Prodotti";
}
<h1>@ViewData["Title"]</h1>

<p>Beccati tutti i prodotti</p>

<form method="get">
  <div class="form-group">
    <label for="minPrezzo">Min Prezzo</label>
    <input type="text" class="form-control" name="minPrezzo" />
  </div>
  
  <div class="form-group">
    <label for="maxPrezzo">Max Prezzo</label>
    <input type="text" class="form-control" name="maxPrezzo" />
  </div>

  <br>
  <button type="submit" class="btn btn-primary">Filtra</button>
</form>

<div>
  <div style="display: flex; border-bottom: 2px solid; padding-top: 10px; padding-bottom: 10px">
    <div style="margin-left: 20px">
      <b>
        Nome
      </b>
    </div>
    <div style="margin-left: 170px">
      <b>
        Prezzo
      </b>
    </div>
    <div style="margin-left: 170px">
      <b>
        Dettaglio
      </b>
    </div>
  </div>

  @foreach (var prodotto in Model.Prodotti)
  {
    <div style="display: flex; padding-top: 10px; padding-bottom: 10px; border-bottom: 1px solid #dee2e6">
      <div style="margin-left: 20px">@prodotto.Nome</div>
      <div style="margin-left: 140px">@prodotto.Prezzo</div>
      <div style="margin-left: 200px">
        <a asp-page="ProdottoDettaglio" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-dettaglio="@prodotto.Dettaglio">
          @prodotto.Dettaglio
        </a>
      </div>
    </div>
  }
</div>

<div class="container my-5 ">
  <div class="row p-2" style="border-bottom: 2px solid">
    <div class="col-md-2">
      <b>
        Nome
      </b>
    </div>
    <div class="col-md-2">
      <b>
        Prezzo
      </b>
    </div>
    <div class="col-md-4">
      <b>
        Dettaglio
      </b>
    </div>
  </div>
  @foreach (var prodotto in Model.Prodotti)
  {
    <div class="row border-bottom p-2">
      <div class="col-md-2">@prodotto.Nome</div>
      <div class="col-md-2">@prodotto.Prezzo</div>
      <div class="col-md-4">
        <a asp-page="ProdottoDettaglio" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-dettaglio="@prodotto.Dettaglio">
          @prodotto.Dettaglio
        </a>
      </div>
    </div>
  }

</div>



<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Prezzo</th>
      <th>Dettaglio</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var prodotto in Model.Prodotti)
    {
      <tr>
        <td>@prodotto.Nome</td>
        <td>@prodotto.Prezzo</td>
        <td>
          <a asp-page="ProdottoDettaglio" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-dettaglio="@prodotto.Dettaglio">
            @prodotto.Dettaglio
            </a>
        </td>
      </tr>
    }
  </tbody>
</table>

<form method="get">
  <input type="hidden" name="minPrezzo" value="@Request.Query["minPrezzo"]" />
  <input type="hidden" name="maxPrezzo" value="@Request.Query["maxPrezzo"]" />
  <button type="submit" class="btn btn-primary" name="pageIndex" value="1">1</button>
  <button type="submit" class="btn btn-primary" name="pageIndex" value="2">2</button>
  <button type="submit" class="btn btn-primary" name="pageIndex" value="3">3</button>
</form>